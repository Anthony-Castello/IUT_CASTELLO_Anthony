<Window x:Class="TESTTTTT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TESTTTTT"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--<StackPanel Orientation="Horizontal" Grid.Column ="0" Grid.Row="0">-->
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="1" HorizontalAlignment="Stretch" >
                <GroupBox Header="Torque" Grid.Column="1">
                    <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="1" HorizontalAlignment="Stretch" >
                        <CheckBox x:Name ="T1" Content="Moteur 1" IsChecked="True" Margin="5" Click="TClick"/>
                        <CheckBox x:Name ="T2" Content="Moteur 2" IsChecked="True" Margin="5" Click="TClick"/>
                        <CheckBox x:Name ="T3" Content="Moteur 3" IsChecked="True" Margin="5" Click="TClick"/>
                        <CheckBox x:Name ="T4" Content="Moteur 4" IsChecked="True" Margin="5" Click="TClick"/>
                        <CheckBox x:Name ="T5" Content="Moteur 5" IsChecked="True" Margin="5" Click="TClick"/>
                        <CheckBox x:Name ="T6" Content="Moteur 6" IsChecked="True" Margin="5" Click="TClick"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" >
                <GroupBox Header="ID" Grid.Column="1">
                    <TextBox x:Name="Id" Text=""/>
                </GroupBox>
                <GroupBox Header="Position" Grid.Column="1">
                    <TextBox x:Name="Pos" Text=""/>
                </GroupBox>
                <GroupBox Header="Time" Grid.Column="1">
                    <TextBox x:Name="Time" Text=""/>
                </GroupBox>
                <GroupBox Header="Vitesse" Grid.Column="1">
                    <TextBox x:Name="Vit" Text=""/>
                </GroupBox>
            </StackPanel>
            

        </Grid>
        <!--</StackPanel>-->

        <GroupBox Header="BOX3" Grid.Column="1" Grid.Row="0">
            <TextBox x:Name="TextBoxReception" TextWrapping="Wrap" IsReadOnly="True"/>
        </GroupBox>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center">
            <Button Content="Envoyer" Width="100" Click="Button_Click" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Center">
            <GroupBox Header="Couple Moteur" >
                <StackPanel>
                    <TextBlock x:Name="C_ID1" Text="1: "/>
                    <TextBlock x:Name="C_ID2" Text="2: "/>
                    <TextBlock x:Name="C_ID3" Text="3: "/>
                    <TextBlock x:Name="C_ID4" Text="4: "/>
                    <TextBlock x:Name="C_ID5" Text="5: "/>
                    <TextBlock x:Name="C_ID6" Text="6: "/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="POsition Moteur" >
                <StackPanel >
                    <TextBlock x:Name="V_ID1" Text="1: "/>
                    <TextBlock x:Name="V_ID2" Text="2: "/>
                    <TextBlock x:Name="V_ID3" Text="3: "/>
                    <TextBlock x:Name="V_ID4" Text="4: "/>
                    <TextBlock x:Name="V_ID5" Text="5: "/>
                    <TextBlock x:Name="V_ID6" Text="6: "/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
