<Window x:Class="TESTTTTT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TESTTTTT"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--<StackPanel Orientation="Horizontal" Grid.Column ="0" Grid.Row="0">-->
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="1" HorizontalAlignment="Stretch" >
                <GroupBox Header="Torque" Grid.Column="1">
                    <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="1" HorizontalAlignment="Stretch" >
                        <CheckBox x:Name ="Epaule1" Content="Épaule 1" IsChecked="True" Margin="5" Click="TClick"/>
                        <CheckBox x:Name ="Epaule2" Content="Épaule 2" IsChecked="True" Margin="5" Click="TClick"/>
                        <CheckBox x:Name ="Coude" Content="Coude" IsChecked="True" Margin="5" Click="TClick"/>
                        <CheckBox x:Name ="Poignee1" Content="Poignée 1" IsChecked="True" Margin="5" Click="TClick"/>
                        <CheckBox x:Name ="Poignee2" Content="Poignée 2" IsChecked="True" Margin="5" Click="TClick"/>
                        <CheckBox x:Name ="Main" Content="Main" IsChecked="True" Margin="5" Click="TClick"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" >
                <GroupBox Header="Nom du moteur" Grid.Column="1">
                    <TextBox x:Name="Name" Text=""/>
                </GroupBox>
                <GroupBox Header="Position" Grid.Column="1">
                    <TextBox x:Name="Pos" Text=""/>
                </GroupBox>
                <GroupBox Header="Time" Grid.Column="1">
                    <TextBox x:Name="Time" Text=""/>
                </GroupBox>
                <GroupBox Header="Vitesse" Grid.Column="1">
                    <TextBox x:Name="Vit" Text=""/>
                </GroupBox>
            </StackPanel>
            

        </Grid>
        <!--</StackPanel>-->

        <GroupBox Header="BOX3" Grid.Column="1" Grid.Row="0">
            <TextBox x:Name="TextBoxReception" TextWrapping="Wrap" IsReadOnly="True"/>
        </GroupBox>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center">
            <Button Content="Test" Width="100" Click="Button_Click_1" />
            <Button Content="Envoie Normal" Width="100" Click="Button_Click" />
            <Button Content="Envoie en attente" Width="100" Click="Button_Click_2"/>
            <Button Content="Envoie des actions en attente" Width="200" Click="Button_Click_3"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Center">
            <GroupBox Header="Couple Moteur" >
                <StackPanel>
                    <TextBlock x:Name="CEpaule1" Text="1: "/>
                    <TextBlock x:Name="CEpaule2" Text="2: "/>
                    <TextBlock x:Name="CCoude" Text="3: "/>
                    <TextBlock x:Name="CPoignee1" Text="4: "/>
                    <TextBlock x:Name="CPoignee2" Text="5: "/>
                    <TextBlock x:Name="CMain" Text="6: "/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Position Moteur" >
                <StackPanel >
                    <TextBlock x:Name="PEpaule1" Text="1: "/>
                    <TextBlock x:Name="PEpaule2" Text="2: "/>
                    <TextBlock x:Name="PCoude" Text="3: "/>
                    <TextBlock x:Name="PPoignee1" Text="4: "/>
                    <TextBlock x:Name="PPoignee2" Text="5: "/>
                    <TextBlock x:Name="PMain" Text="6: "/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
