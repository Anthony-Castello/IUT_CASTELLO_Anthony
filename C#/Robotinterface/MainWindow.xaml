<Window x:Class="Robotinterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Robotinterface"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <GroupBox Header="Emission" Grid.Column="0" Grid.Row="0">            
            <TextBox x:Name="TextBoxEmission" TextWrapping="Wrap" AcceptsReturn="True" TextChanged="TextBoxEmission_TextChanged" KeyUp="TextBoxEmission_KeyUp"/>
        </GroupBox>
        <GroupBox Header="Réception" Grid.Column="1" Grid.Row="0">            
            <TextBox x:Name="TextBoxReception" TextWrapping="Wrap" IsReadOnly="True"/>        
        </GroupBox>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center">
            <Button x:Name="boutonEnvoyer" Content="Envoyer" Width="100" Click="boutonEnvoyer_Click"  />
            <Button x:Name="boutonClear" Content="Clear" Width="100" Click="boutonClear_Click" />
            <Button x:Name="boutonTest" Content="Test" Width="100" HorizontalAlignment="Left" Click="boutonTest_Click"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Center">
            <GroupBox Header="Leds">
                <StackPanel>
                    <CheckBox x:Name ="Led1" Content="Led1" IsChecked="False"/>
                    <CheckBox x:Name ="Led2" Content="Led2" IsChecked="False"/>
                    <CheckBox x:Name ="Led3" Content="Led3" IsChecked="False"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Télémètres IR" >
                <StackPanel>
                    <TextBlock x:Name="ExG" Text="IR ExGauche : "></TextBlock>
                    <TextBlock x:Name="G" Text="IR Gauche : "></TextBlock>
                    <TextBlock x:Name="C" Text="IR Centre : "></TextBlock>
                    <TextBlock x:Name="D" Text="IR Droit : "></TextBlock>
                    <TextBlock x:Name="ExD" Text="IR ExDroit : "></TextBlock>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Moteurs" >
                <StackPanel >
                    <TextBlock x:Name="M_G" Text="Vitesse Gauche : " ></TextBlock>
                    <TextBlock x:Name="M_D" Text="Vitesse Droit : " ></TextBlock>
                </StackPanel>
            </GroupBox>
        </StackPanel>
        
        
        
        
    </Grid>
</Window>
